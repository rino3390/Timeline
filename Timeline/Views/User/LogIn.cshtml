@model Timeline.ViewModel.LoginViewModel

@{
    ViewBag.Title = "登入";
}
<h1 class="mt-3 ms-3">登入</h1>
<hr/>
<div class="page-center row container justify-content-center align-items-center">
    <div class="col-md-4 container">
        <form asp-action="Login" method="post" asp-route-returnurl="@ViewBag.ReturnUrl" class="row g-3">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="account" class="control-label"></label>
                <input asp-for="account" class="form-control"/>
                <span asp-validation-for="account" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="password" class="control-label"></label>
                <input type="password" asp-for="password" class="form-control"/>
                <span asp-validation-for="password" class="text-danger"></span>
                <span class="text-danger">@ViewBag.Result</span>
            </div>
            <div class="form-group d-flex justify-content-center">
                <input type="submit" value="登入" class="btn btn-primary"/>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}