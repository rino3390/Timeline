@model Timeline.ViewModel.TimePointCreateViewModel
@{
	ViewBag.Title = "新增時間點";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="mt-3 ms-3">新增時間點</h1>
<hr/>
<div class="row container justify-content-center align-items-center">
	<div class="col-md-4 container">
		<form asp-action="CreateEvent" method="post" class="row g-3">
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>
			<div class="form-group">
				<label asp-for="dateTime" class="control-label"></label>
				<input asp-for="dateTime" class="form-control" value="@DateTime.Now.ToString("yyyy-MM-ddThh:mm")"/>
				<span asp-validation-for="dateTime" class="text-danger col"></span>
			</div>
			<div class="form-group">
				<label asp-for="title" class="control-label"></label>
				<input asp-for="title" class="form-control"/>
				<span asp-validation-for="title" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="description" class="control-label"></label>
				<input asp-for="description" class="form-control"/>
				<span asp-validation-for="description" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="context" class="control-label"></label>
				<input asp-for="context" class="form-control"/>
				<span asp-validation-for="context" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="rank" class="control-label"></label>
				<select asp-for="rank" class="form-control" asp-items="@Model.rankEnum"></select>
				<span asp-validation-for="rank" class="text-danger col"></span>
			</div>
			<div class="form-group">
				<label asp-for="dateto" class="control-label"></label>
				<select asp-for="dateto" class="form-control" asp-items="@Model.dateEnum"></select>
				<span asp-validation-for="dateto" class="text-danger col"></span>
			</div>
			<div class="form-group d-flex justify-content-center">
				<input type="submit" value="Create" class="btn btn-primary"/>
			</div>
		</form>
	</div>
</div>

@section Scripts {
	@{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}